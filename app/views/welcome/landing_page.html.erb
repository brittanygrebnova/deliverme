<div id="navbar">
  <% if user_signed_in? %>
    <ul>
      <li><%= link_to("Go To Your Orders", user_orders_path(current_user)) %></li>
      <li><%= link_to("Place a New Order", vendors_path(:user_id => current_user.id)) %></li>
    </ul>
  <% elsif vendor_signed_in? %>
    <ul>
      <li><%= link_to("Go To Your Orders", vendor_path(current_vendor)) %></li>
    </ul>
  <% else %>
    <ul>
      <li><%= link_to('User Registration', new_user_registration_path) %></li>
      <li><%= link_to('User Log in with Email', new_user_session_path) %></li>
      <li><%= link_to('User Log in with Facebook', user_facebook_omniauth_authorize_path) %></li>
      <li><%= link_to('Vendor Registration', new_vendor_registration_path) %></li>
      <li><%= link_to('Vendor Login', new_vendor_session_path) %></li>
    </ul>
  <% end %>
</div>

<div>
  <h2>Welcome to the DeliverMe Landing Page!</h2>
</div>

<div>
  <h3>Check Out All These Awesome Vendors</h3>
</div>

<div>
  <% @vendors.each do |vendor| %>
    <h3><%= vendor.name %></h3>
    <% vendor.items.each do |item| %>
      <ul>
      <li><%= item.name %> $<%= item.price %></li>
      </ul>
    <% end %>
  <% end %>
</div>
