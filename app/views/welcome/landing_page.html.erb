<div class="buttons">
  <% if user_signed_in? %>

      <button class="button"><%= link_to "Place a New Order", vendors_path(:user_id => current_user.id) %></button>
  <% elsif vendor_signed_in? %>
      <button class="button"><%= link_to "Go To Your Orders", vendor_path(current_vendor) %></button>
  <% else %>
      <button class="button"><%= link_to "User Registration", new_user_registration_path %></button>
      <button class="button"><%= link_to "User Log in with Email", new_user_session_path %></button>
      <button class="button"><%= link_to "User Log in with Facebook", user_facebook_omniauth_authorize_path %></button>
      <button class="button"><%= link_to "Vendor Registration", new_vendor_registration_path %></button>
      <button class="button"><%= link_to "Vendor Login", new_vendor_session_path %></button>
  <% end %>
</div>

<div>
  <h1>DeliverMe</h1>
</div>

<div>
  <h2><strong>Check Out All These Awesome Vendors</strong</h2>
</div>

<div>
  <table class="vendor-table">
  <% @vendors.each do |vendor| %>
    <tr>
      <td><h2><%= vendor.name %><h2></td>
    </tr>
    <% vendor.items.each do |item| %>
      <tr>
        <td><%= item.name %> $<%= item.price %></td>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>
