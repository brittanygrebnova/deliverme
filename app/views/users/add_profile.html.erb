<div>
  <%= form_for @user, :url => url_for(:controller => 'users', :action => 'update_profile') do |f| %>
    <%= f.label "Add Your Personal Info" %><br>
    <br>
    <%= f.label :user_name %> <%= f.text_field :user_name %><br>
    <br>
    <%= f.label :stree_address %> <%= f.text_field :street_address %><br>
    <br>
    <%= f.label :city %> <%= f.text_field :city %><br>
    <br>
    <%= f.label :state %> <%= f.text_field :state %><br>
    <br>
    <%= f. submit "Submit" %>
  <% end %>
</div>
