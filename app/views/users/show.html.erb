<div>
  <% if user_signed_in? %>
    <% if @user.image %>
      <img src="<%= @user.image %>">
    <% end %>
    <% if @user.user_name %>
      <h2>Hey <%= @user.user_name %>!</h2>
    <% else %>
      <h3><%= link_to "Add Your Profile Info", add_user_profile_path %></h3>
    <% end %>
    <p>Email: <%= @user.email %></p>
    <p>DeliverMe Member Since: <%= @user.readable_date %></p>
    <% if @user.street_address.present? && @user.city.present? && @user.state.present? %>
      <p>Address: <%= @user.street_address %> <%= @user.city %>, <%= @user.state %></p>
    <% end %>
    <p>Balance: $<%= @user.balance %></p>

  <%= link_to "Add Money", add_money_path %><br>


  <%= link_to "Edit Your Account Info", edit_user_path(@user) %><br>


  <%= link_to "Your Orders", user_orders_path(@user) %><br>


  <%= link_to "Place a New Order", new_user_order_path(@user) %><br>
  <% end %>
</div>
