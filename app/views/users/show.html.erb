
<div>
  <% if user_signed_in? %>
    <img src="<%= @user.image %>">
    <h2>Hey <%= @user.user_name %>!</h2>
    <p>Email: <%= @user.email %></p>
    <p>DeliverMe Member Since: <%= @user.readable_date %></p>
    <p>Address: <%= @user.street_address %> <%= @user.city %>, <%= @user.state %></p>
    <p>Balance: $<%= @user.balance %></p>
  <% end %>
</div>

<div>
  <%= link_to "Add Money", add_money_path %>
</div>

<div>
  <%= link_to "Edit Your Account Info", edit_user_path(@user) %>
</div>

<div>
  <%= link_to "Your Orders", user_orders_path(@user) %>
</div>

<div>
  <%= link_to "Place a New Order", new_user_order_path(@user) %>
</div>
