<div>
  <%= form_for @user, :url => url_for(:controller => 'users', :action => 'update_balance') do |f| %>
    <%= f.label "Add Money To Your Account Balance" %><br>
    <br>
    <%= f.label :amount %> $<%= f.text_field :balance, :value => "" %><br>
    <br>
    <button class="button"><%= f. submit "Add Money" %></button>
  <% end %>
</div>
